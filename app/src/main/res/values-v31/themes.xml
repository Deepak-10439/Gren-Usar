<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.GrenUsar" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Starting theme for the splash screen -->
    <style name="Theme.GrenUsar.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.AnimatedSplashScreen</item>
        <item name="android:windowSplashScreenBackground">#33907C</item>
    </style>

    <!-- Theme used after the splash screen -->
    <style name="Theme.AnimatedSplashScreen" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">#33907C</item>
    </style>

</resources>
